@model NMS.ViewModels.NotesVM
@{
    Layout = null;
    //  var title = "Create Note";
}


<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="upsert" asp-route-id="@Model.Note.Id" onsubmit="return ViewAjaxPost(this);" autocomplete="off">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Note.Id" />
            @if (Model.Note.Id != 0)
            {             
            }
            <div class="row">
                <div class="col-md-12 p-4">

                    <div class="form-group row">
                        <label asp-for="Note.CategoryName"></label>
                        <select asp-for="Note.CategoryId" asp-items="Model.CategoryList" class="form-control" style="width:250px;"></select>
                        <span asp-validation-for="Note.CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Note.Description"></label>
@*                        <input type="text" asp-for="Note.Description" class="form-control"  required />
*@                        <textarea asp-for="Note.Description" class="form-control" style="min-height:300px;" required ></textarea>
                        <span asp-validation-for="Note.Description" class="text-danger"></span>
                    </div>

                    

                   


                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Note.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Note.Id" /> }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />}
                </div>
            </div>
        </form>
    </div>
</div>
    @section Scripts{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }